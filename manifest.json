{
  "manifest_version": 3,
  "name": "Smart Extension Manager",
  "version": "1.0",
  "description": "Auto-manage your Chrome extensions contextually.",
  "permissions": [
    "storage",
    "management",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}